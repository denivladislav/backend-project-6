extends ../layouts/application.pug

block header
  = t('views.users.edit')

block content
  +formFor()(action=`/users/${user.id}` method="post")
    +input(user, 'firstName', t('views.users.firstName'), errors)(type="text")(value=user.firstName)
    +input(user, 'lastName', t('views.users.lastName'), errors)(type="text")(value=user.lastName)
    +input(user, 'email', t('views.users.email'), errors)(type="text")(value=user.email)
    +input(user, 'password', t('views.users.password'), errors)(type="password")
    input(name="_method" type="hidden" value="patch")
    +submit(user)(value=('Изменить'))