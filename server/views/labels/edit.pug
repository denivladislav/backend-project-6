extends ../layouts/application.pug

block header
  = t('views.labels.edit')

block content
  +formFor()(action=`/labels/${label.id}` method="post")
    +input(label, 'name', errors, t('views.labels.name'))(type="text")
    input(name="_method" type="hidden" value="PATCH")
    +submit(label)(value=t('views.labels.save'))