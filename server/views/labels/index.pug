extends ../layouts/application.pug

block header
  .d-flex.flex-column
    = t('layouts.application.labels')
    div
      a.btn.btn-primary(href=route('newLabel'))= t('views.labels.new.createLabel')

block content

  table.table.table-striped
    thead
      tr
        th= t('views.labels.id')
        th= t('views.labels.name')
        th= t('views.labels.createdAt')
        th= t('views.labels.actions')
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td= formatDate(label.createdAt)
          td
            .d-flex.gap-1
              a.btn.btn-primary(href=`/labels/${label.id}/edit`)= t('views.labels.edit')
              +buttonTo(`labels/${label.id}`, 'delete')(class="btn btn-danger" value=t('views.labels.delete'))
